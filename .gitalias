[alias]
        a = add

        amend = commit --amend

        b = branch

        c = commit

        co = checkout
        cob = checkout -b
        
        cp = cherry-pick

        d = diff --color

        ed = branch --no-merged dev

        g = !git gui

        k = !gitk --all

        lc = !git ol ORIG_HEAD.. --stat --no-merges

        m = merge --no-ff -e
        mff = merge

        lg = log --all --graph --abbrev=5 --pretty=tformat:'%C(yellow)%h%Creset -%C(green bold)%d%Creset %s %C(white dim)(%cr) %C(blue bold)<%an>%Creset' --abbrev-commit
        lgnp = !git --no-pager lg

        p = push

        pl = pull

        rb = rebase

        s = status

        st  = stash
        stl = stash list
        sta = stash apply
        std = stash drop
        sts = stash show -p
        stp = stash pop

        unc = reset --soft HEAD^

        who = shortlog -sne
